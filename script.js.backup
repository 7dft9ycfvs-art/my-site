// –ü–ª–∞–≤–Ω–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞ –¢–û–õ–¨–ö–û –¥–ª—è —è–∫–æ—Ä–Ω—ã—Ö —Å—Å—ã–ª–æ–∫ (#)
document.querySelectorAll('nav a').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        
        // –ï—Å–ª–∏ —ç—Ç–æ —è–∫–æ—Ä–Ω–∞—è —Å—Å—ã–ª–∫–∞ (–Ω–∞—á–∏–Ω–∞–µ—Ç—Å—è —Å #)
        if (href.startsWith('#')) {
            e.preventDefault();
            document.querySelector(href).scrollIntoView({
                behavior: 'smooth'
            });
        }
        // –ï—Å–ª–∏ —ç—Ç–æ —Å—Å—ã–ª–∫–∞ –Ω–∞ –¥—Ä—É–≥—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É (event.html) - –Ω–∏—á–µ–≥–æ –Ω–µ –¥–µ–ª–∞–µ–º,
        // –±—Ä–∞—É–∑–µ—Ä –æ–±—Ä–∞–±–æ—Ç–∞–µ—Ç –µ—ë —Å–∞–º
    });
});
